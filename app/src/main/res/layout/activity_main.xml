<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <ImageView
                android:id="@+id/iv1"
                android:src="@drawable/android_background"/>

            <ImageView
                android:id="@+id/iv2"
                android:src="@drawable/android_background"/>

            <ImageView
                android:id="@+id/iv3"
                android:src="@drawable/android_background"/>

            <ImageView
                android:id="@+id/iv4"
                android:src="@drawable/android_background"/>

        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/iv5"
                android:src="@drawable/android_background"/>

            <ImageView
                android:id="@+id/iv6"
                android:src="@drawable/android_background"/>

            <ImageView
                android:id="@+id/iv7"
                android:src="@drawable/android_background"/>

            <ImageView
                android:id="@+id/iv8"
                android:src="@drawable/android_background"/>

        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/iv9"
                android:src="@drawable/android_background"/>

            <ImageView
                android:id="@+id/iv10"
                android:src="@drawable/android_background"/>

            <ImageView
                android:id="@+id/iv11"
                android:src="@drawable/android_background"/>

            <ImageView
                android:id="@+id/iv12"
                android:src="@drawable/android_background"/>

        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/iv13"
                android:src="@drawable/android_background"/>

            <ImageView
                android:id="@+id/iv14"
                android:src="@drawable/android_background"/>

            <ImageView
                android:id="@+id/iv15"
                android:src="@drawable/android_background"/>

            <ImageView
                android:id="@+id/iv16"
                android:src="@drawable/android_background"/>

        </TableRow>

    </TableLayout>

    <Chronometer
        android:id="@+id/chrono"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:format="%s"/>

</LinearLayout>

